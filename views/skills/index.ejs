<%- include('../partials/header') %>

    <h3>To-Dos as of <%= time %></h3>
    <ul>
        <% skills.forEach(function(skill) { %>
            <li>
              <form
                action="/skills/<%= skill.id %>?_method=DELETE"
                method="POST"
                class="delete-skill"
              >
                <button type="submit">X</button>
              </form>
              <a href="/skills/<%= skill.id %>"><%= skill.skill %></a>
              -
              <%= skill.completed ? 'done' : 'not done' %>
            </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add New Skill</a>

<%- include('../partials/footer') %>